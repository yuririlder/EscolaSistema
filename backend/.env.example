# Porta do servidor
PORT=3000

# Ambiente
NODE_ENV=development

# PostgreSQL (Railway fornece automaticamente DATABASE_URL)
DATABASE_URL=postgres://user:password@host:port/database

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# CORS (em produção, configure o domínio do frontend)
CORS_ORIGIN=http://localhost:5173
# Para produção no Railway, use algo como:
# CORS_ORIGIN=https://seu-frontend.up.railway.app
